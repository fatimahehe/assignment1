<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="username"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_settings_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <!-- Profile Picture and Profile Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_picture_background"
            android:src="@drawable/profile_pic"
            android:scaleType="centerCrop"/>

        <!-- Profile Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Post Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center_vertical">



                <TextView
                    android:id="@+id/posts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:layout_marginStart="62dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textStyle="bold"
                    android:layout_marginStart="82dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/posts_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/followers_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/following_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Name -->
        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pikachuuuu"

            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

        <!-- Bio -->
        <TextView
            android:id="@+id/bio_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you go, Yellow Yelow"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirty Fellow"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <!-- Link -->
        <TextView
            android:id="@+id/link_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="myanime.com"
            android:textColor="@color/link_color"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Icon 1 -->
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_grid_view_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 2 -->
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_menu_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 3 -->
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_location_on_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 4 -->
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_perm_contact_calendar_24"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp"
        >

        <!-- First row of images -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1"

            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic2"

            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic3"

            android:layout_margin="1dp"/>

        <!-- Second row of images -->
        <ImageView
            android:id="@+id/image4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"

            android:src="@drawable/pic4"

            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/image5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"

            android:src="@drawable/pic5"

            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/image6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic6"

            android:layout_margin="1dp"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Icon 1 -->
        <ImageView
            android:id="@+id/iconn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_other_houses_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 2 -->
        <ImageView
            android:id="@+id/iconn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_search_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 3 -->
        <ImageView
            android:id="@+id/iconn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_photo_camera_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- Icon 4 -->
        <ImageView
            android:id="@+id/iconn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_favorite_24"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/iconn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_person_24"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>